@model Orcamentos.Models.Profile

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Perfil</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        
        <dt class = "col-sm-2">
            Id do Nivel de Perfil
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.profileLevelId)
        </dd>
        <dt class="col-sm-2">
            Nivel de Perfil
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProfileLevel.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
    <a class="btn btn-primary" asp-action="Index">Voltar para a lita</a>
</div>
