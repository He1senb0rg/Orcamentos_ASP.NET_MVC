@model IEnumerable<Profile>

@{
    ViewData["Title"] = "Profile";
}

<h1>Menu</h1>
<h3>Perfil</h3>

<div class="mb-3">
	<a class="btn btn-primary" asp-action="Create"><i class="bi bi-plus-lg btn-icon mr-2"></i></a>

	<button class="btn btn-success" onclick="changeTable()" id="changeTableButton">Mostrar Excel</button>
</div>

<table class="table" id="profileTable">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            
            <th>
                Nivel de Perfil
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
		@{
			int i = 0;
		}
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
				<td>
                    @Html.DisplayFor(modelItem => item.ProfileLevel.Name)
                </td>             
                <td>
					<div class="btn-group" role="group">
						<div>
							<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success rounded-0 rounded-start">
								<i class="bi bi-file-text-fill btn-icon mr-2"></i>
							</a>
						</div>
						<div>
							<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary rounded-0">
								<i class="bi bi-pencil-square btn-icon mr-2"></i>
							</a>
						</div>
						<div>
							<button type="button" class="btn btn-danger rounded-0 rounded-end" id="@("EliminarButton"+i)" data-id="@item.Id" onclick="showModalDelete(this.id)">
								<i class="bi bi-trash3-fill btn-icon mr-2"></i>
							</button>
						</div>
					</div>
                </td>
            </tr>
			i++;
        }
    </tbody>
</table>

<div class="modal fade" id="eliminarModal" tabindex="-1">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title text-break" id="eliminarModalNome">Eliminar Perfil Nº</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body text-break">
				Tem a certeza que pretende eliminar o Perfil Nº<span id="eliminarModalDesc"></span> ? <h6>Esta ação não pode ser desfeita</h6>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
				<form id="eliminarModalForm" method="POST">
					<button type="submit" class="btn btn-danger">Eliminar</button>
				</form>
			</div>
		</div>
	</div>
</div>

<div class="modal fade" id="eliminarModalExcel" tabindex="-1">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title text-break" id="eliminarModalNomeExcel">Eliminar Perfil Nº</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body text-break">
				Tem a certeza que pretende eliminar o Perfil Nº<span id="eliminarModalDescExcel"></span> ? <h6>Esta ação não pode ser desfeita</h6>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
				<button type="submit" class="btn btn-danger" data-id="" id="eliminarModalButtonExcel">Eliminar</button>
			</div>
		</div>
	</div>
</div>

<div id="excelTable" class="d-none">
	<div class="mb-3" id="excelProfiles"></div>

	<button class="btn btn-success" id="save-button">Guardar</button>
	<button class="btn btn-success" id="addRowButton">Adicionar linha</button>
	<button class="btn btn-success" id="export-file">Guardar CSV</button>
	<button class="btn btn-success" id="btnPDF" >Guardar PDF</button>
	
	<div class="d-none" id="excelProfiles2"></div>
</div>


@*<div>@Html.DropDownList("profilesList")</div>*@

<script>

	function showModalDelete(id) {

		var id_value = document.getElementById(id);
		const idProfile = id_value.getAttribute("data-id");

		document.getElementById('eliminarModalForm').setAttribute("action", "/Profiles/Delete/" + idProfile);
		document.getElementById('eliminarModalNome').innerHTML = "Eliminar Perfil Nº" + idProfile;
		document.getElementById('eliminarModalDesc').innerHTML = idProfile;

		$("#eliminarModal").modal("show");
	}

	function showModalDeleteExcel(id) {

		var id_value = document.getElementById(id);
		const idProfile = id_value.getAttribute("data-id");

		document.getElementById('eliminarModalNomeExcel').innerHTML = "Eliminar Perfil Nº" + idProfile;
		document.getElementById('eliminarModalDescExcel').innerHTML = idProfile;

		document.getElementById('eliminarModalButtonExcel').setAttribute("data-id", idProfile);

		$("#eliminarModalExcel").modal("show");
	}

	var buttonTable = document.getElementById("changeTableButton")

	function changeTable() {

		var table = document.getElementById("profileTable");
		var excel = document.getElementById("excelTable")

		if (excel.classList.contains('d-none')) {
			table.classList.add('d-none')
			excel.classList.remove('d-none')
			buttonTable.innerHTML = "Mostrar Tabela"
		}
		else {
			table.classList.remove('d-none')
			excel.classList.add('d-none')
			buttonTable.innerHTML = "Mostrar Excel"
		}

	}

	document.addEventListener('DOMContentLoaded', function () {

		var data = @Html.Raw(Json.Serialize(Model
			.Select(o => new {
				o.Id,
				o.Name,
				ProfileLevelId = o.profileLevelId,
				ProfileLevelName = o.ProfileLevel.Name
			})));

		var colHeaders = [
			'ID',
			'Nome',
			'Nivel de Perfil ID',
			'Nivel de Perfil',
			'Ativo',
			'Eliminar'];

			var actionRenderer = function (instance, td, row, col, prop, value, cellProperties) {
				var id = instance.getDataAtRowProp(row, 'id');
				var $button = $('<button type="button" class="btn btn-sm btn-danger rounded-2" style="font-size: 0.8em;" id="EliminarButtonExcel'+id+'" data-id="'+id+'" onclick="showModalDeleteExcel(this.id)"></button>');
				$button.html("Eliminar")
				$(td).css('text-align', 'center').empty().append($button);
			};

		var container = document.getElementById('excelProfiles');

		var mList = @Html.Raw(Json.Serialize(ViewBag.profileLevelsList));
		var result = mList.map((item) => item.text)

		var hot = new Handsontable(container, {
			data: data,
			colHeaders: colHeaders,
			columns: [
				{ data: 'id', readOnly: true },
				{ data: 'name', type: 'text' },
				{ data: 'profileLevelId', readOnly: true },
				{ data: 'profileLevelName', type: 'dropdown', source: result },
				{ data: 'ativo', type: 'checkbox', readOnly: true },
				{ data: 'eliminar', renderer: actionRenderer, readOnly: true }
			],

			afterChange: function (changes, source) {
				if (source === 'edit') {
					changes.forEach(function (change) {
						var row = change[0];
						var prop = change[1];
						var newValue = change[3];

						if (prop === 'profileLevelName') {
							var niveldeperfil = mList.find(function (p) { return p.text === newValue; });
							hot.setDataAtCell(row, hot.propToCol('profileLevelId'), niveldeperfil.value);
						}
					});
				}
			},

			language: 'pt-BR',
			rowHeaders: true,
			hiddenColumns: {
				columns: [4]
			},
			filters: true,
			dropdownMenu: ['filter_by_condition', 'filter_action_bar'],
			columnSorting: true,
			height: '300px',
			licenseKey: 'non-commercial-and-evaluation' // for non-commercial use only
		});

		var button1 = document.getElementById('export-file');
		

		button1.addEventListener('click', function () {
		
		var data = hot.getData();
		
		var colHeaders2 = [
        			'ID',
        			'Nome',
        			'Nivel de Perfil ID',
        			'Nivel de Perfil'];

			$.ajax({
				type: "GET",
				url: "/Profiles/getProfiles",
				dataType: "json",
				success: function (linhas2) {
					var hot2 = new Handsontable(document.getElementById('excelProfiles2'), {
						data: linhas2,
						colHeaders: colHeaders2,

						rowHeaders: true,
						licenseKey: 'non-commercial-and-evaluation' // for non-commercial use only
					});


					var currentDate = new Date();
					var dateString = currentDate.getDate() + '/' + (currentDate.getMonth() + 1) + '/' + currentDate.getFullYear();

					var wb = XLSX.utils.book_new();

					var ws = XLSX.utils.json_to_sheet(hot2.getData());
					XLSX.utils.sheet_add_aoa(ws, [colHeaders2], { origin: 'A1' });

					XLSX.utils.book_append_sheet(wb, ws, 'Folha 1');


					var wbout = XLSX.write(wb, { bookType: 'xlsx', type: 'binary' });

					function s2ab(s) {
						var buf = new ArrayBuffer(s.length);
						var view = new Uint8Array(buf);
						for (var i = 0; i < s.length; i++) view[i] = s.charCodeAt(i) & 0xff;
						return buf;
					}

					var blob = new Blob([s2ab(wbout)], { type: 'application/octet-stream' });

					var downloadUrl = URL.createObjectURL(blob);
					var a = document.createElement('a');
					a.href = downloadUrl;
					a.download = 'Tabela_Perfis_' + dateString + '.xlsx';
					document.body.appendChild(a);
					a.click();
					setTimeout(function () {
						document.body.removeChild(a);
						window.URL.revokeObjectURL(downloadUrl);
					}, 0);
				},
				error: function (xhr, status, error) {
					console.log(error);
				}
			});
		});

		var pdfButton = document.getElementById('btnPDF');

		pdfButton.addEventListener('click', function() {

			var data = hot.getData();
			window.jsPDF = window.jspdf.jsPDF;
			
			var colHeaders2 = [
                    			'ID',
                    			'Nome',
                    			'Nivel de Perfil ID',
                    			'Nivel de Perfil'];

			var doc = new jsPDF({
				orientation: "landscape"
			});

			var currentDate = new Date();

			var dateString = currentDate.getDate() + '/' + (currentDate.getMonth() + 1) + '/' + currentDate.getFullYear();

			doc.text('Tabela de Perfis - ' + dateString, 10, 10);

			doc.autoTable({
				head: [colHeaders2],
				body: data,
				styles: {
					fontSize: 5 // Set font size to 14
				}
			});

			var dateString = currentDate.getDate() + '-' + (currentDate.getMonth() + 1) + '-' + currentDate.getFullYear();

			doc.save('Tabela_Perfis_'+dateString+'.pdf');
		});

		const save = document.querySelector('#save-button');

		var tableData = JSON.stringify(hot.getSourceData());

		//console.log(tableData);

		$("#save-button").click(function () {
			hot.validateCells((valid) => {
				if (valid) {
					$.ajax({
						url: '/Profiles/UpdateProfiles',
						data: JSON.stringify(hot.getSourceData()),
						dataType: 'json',
						contentType: "application/json",
						type: 'POST',
						success: function (result) {
							getTable();
							//location.reload()
						},
						error: function (xhr, status, error) {
							alert("Failure: " + error);
						}
					});
				}
				else {
					alert("Erro, verifique se tem alguma célula inválida.");
				}
			})

		});

		function getTable() {

			$.ajax({
				url: '/Profiles/GetTableProfiles',
				dataType: 'json',
				contentType: "application/json",
				type: 'GET',
				success: function (data) {
					var i = 0;
					var tableBody = $('#profileTable tbody');
					tableBody.empty(); // clear existing rows
					$.each(data, function (index, item) {
						var profileLevelName = item.profileLevel ? item.profileLevel.name : '';

						var row = '<tr>' +
							'<td>' + item.name + '</td>' +
							'<td>' + profileLevelName + '</td>' +
							'<td>' +
							'<div class="btn-group" role="group" >' +
							'<div>' +
							'<a href="/profiles/details/' + item.id + '" class="btn btn-success rounded-0 rounded-start">' +
							'<i class="bi bi-file-text-fill btn-icon mr-2"></i>' +
							'</a>' +
							'</div>' +
							'<div>' +
							'<a href="/profiles/edit/' + item.id + '" class="btn btn-primary rounded-0">' +
							'<i class="bi bi-pencil-square btn-icon mr-2"></i>' +
							'</a>' +
							'</div>' +
							'<div>' +
							'<button type="button" class="btn btn-danger rounded-0 rounded-end" id="EliminarButton'+i+'" data-id="' + item.id + '" onclick="showModalDelete(this.id)">' +
							'<i class="bi bi-trash3-fill btn-icon mr-2"></i>' +
							'</button>' +
							'</div>' +
							'</div>' +
						    '</td>' +

							'</tr>';
							i += 1
						tableBody.append(row);
					});
				},
				error: function (xhr, status, error) {
					alert("Failure: " + error);
				}
			});

		}

		function deleteOnExcel(){

		var id_value = document.getElementById("eliminarModalButtonExcel");
		const idProfile = id_value.getAttribute("data-id");

		$("#eliminarModalExcel").modal("hide");

		$.ajax({
				type: "POST",
				url: "/Profiles/deleteOnExcel",
				data: idProfile,
				contentType: "application/json; charset=utf-8;",
				dataType: "json",
				success: function (data) {

					hot.loadData(data);
					getTable();
				},
				error: function (xhr, status, error) {
					console.log(error);
				}
			});
		}

		var buttonDelete = document.getElementById("eliminarModalButtonExcel")
		buttonDelete.addEventListener("click", deleteOnExcel)

		function addNewRow() {

			hot.validateCells((valid) => {
				if (valid) {
					$.ajax({
						url: '/Profiles/UpdateProfiles',
						data: JSON.stringify(hot.getSourceData()),
						dataType: 'json',
						contentType: "application/json",
						type: 'POST',
						success: function (result) {
							var novaLinha = {
								Name: "Não definido",
								ProfileLevelId: 1,
								ProfileLevelName: "Não definido",
								Ativo: true
							};


							$.ajax({
								type: "POST",
								url: "/Profiles/AddNewRow",
								data: novaLinha,
								dataType: "json",
								success: function (dataModel) {

									hot.loadData(dataModel);
									getTable();
								},
								error: function (xhr, status, error) {
									console.log(error);
								}
							});
						},
						error: function (xhr, status, error) {
							alert("Failure: " + error);
						}
					});
				}
				else {
					alert("Erro, verifique se tem alguma célula inválida.");
				}
			})

			

		}

		var buttonNewRow = document.getElementById("addRowButton")
		buttonNewRow.addEventListener("click", addNewRow)

	});



</script>