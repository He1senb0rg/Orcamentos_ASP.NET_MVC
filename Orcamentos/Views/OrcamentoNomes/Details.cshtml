        						'SubFamilia',
        						'Serviços',
        						'Fornecedor',
        					];
        
        
        
        
        
        					//var data3 = hot2.getData();
        					var seq = 10;
        
        					for (var i = 0; i < data2.length; i++) {
        						data2[i][1] = (data[i][1]) + "0";
        						data2[i][7] = euro.format(data[i][7]);
        						data2[i][8] = euro.format(data[i][8]);
