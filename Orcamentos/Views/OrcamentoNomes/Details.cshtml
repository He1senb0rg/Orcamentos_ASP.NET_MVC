					        o.Marca,
					        o.TotalPrice,
					        o.TotalCost,
					        o.DelivaryDate,
					        SubFamilia = o.RevenueType.Nome,
					        o.ExternalProvider,
        
				        })));
					
					var id = document.getElementById("orcamentoNomeId").value;
					
					console.log(id)
        
        			$.ajax({
        				type: "POST",
        				data: id, 
        				contentType: "application/json; charset=utf-8;",
        				url: "/OrcamentoNomes/getOrcamentos",
        				dataType: "json",
        				success: function (linhas2) {
							
