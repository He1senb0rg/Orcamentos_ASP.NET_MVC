        $("#save-button").click(function () {
            hot.validateCells((valid) => {
                if (valid) {
                    $.ajax({
                        url: '/Orcamentos/UpdateOrcamentos',
                        data: JSON.stringify(hot.getSourceData()),
                        dataType: 'json',
                        contentType: "application/json",
                        type: 'POST',
                        success: function (result) {
                            alert("Success");
                            getTable();
