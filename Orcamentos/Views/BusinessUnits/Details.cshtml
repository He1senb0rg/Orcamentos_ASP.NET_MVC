@model Orcamentos.Models.BusinessUnit

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Unidades de Negocio</h4>
    <hr/>
    <div class="row mb-2">
        <div class="col-md-4">
            <div class="form-group mb-2">
                <label class="control-label">Nome</label>
                <input asp-for="Name" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label class="control-label">Gestor de Negocios</label>
                <div class="input-group mb-2">
                    <input asp-for="BuManager.Nome" class="form-control" readonly/>
                </div>
            </div>
            <div class="form-group form-check d-none">
                <label asp-for="Ativo" class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" checked/> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>
        </div>
    </div>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
    <a class="btn btn-primary" asp-action="Index">Voltar para a lista</a>
</div>